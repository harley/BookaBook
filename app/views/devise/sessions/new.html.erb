<%= devise_error_messages! %>
<div class="col-md-6 offset-md-3">
  <div class="pricing">
		<ul>
			<li class="unit price-warning active ">
				<div class="price-title">
					<h3>Chào mừng tới Bôkabook</h3>
					<p>Đăng Nhập</p>
				</div>
				<div class="price-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group row">
              <%= f.label :email, class: "col-md-5 col-form-label"  %>
              <div class="col-md-7">
                <%= f.email_field :email, autofocus: true, class: "form-control", require: true  %>  
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :password, class: "col-md-5 col-form-label" %>
              <div class="col-md-7">
                <%= f.password_field :password, autocomplete: "off", class: "form-control", require: true %>  
              </div>
            </div>
          
            <% if devise_mapping.rememberable? -%>
              <div class="form-group row">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

				</div>
				<div class="price-foot">
				  <%= f.submit "Đăng Nhập", class: "btn btn-primary" %><br/>
					<%= render "devise/shared/links" %>
				</div>
				<% end %>
			</li>
		</ul>
	</div>
</div>

